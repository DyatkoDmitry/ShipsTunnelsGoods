<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/entire_tunnel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/docks"
        app:layout_constraintStart_toStartOf="parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/baseline_arrow_drop_up_24"/>

    <LinearLayout
        android:id="@+id/tunnel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/grey"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_ship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/second_ship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/third_ship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/fourth_ship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/fifth_ship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>
        </LinearLayout>

        <View
            android:id="@+id/arrow_bottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="-100dp"
            android:background="@drawable/baseline_arrow_drop_down_24"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/docks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/entire_tunnel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/bread_color"
                android:layout_marginBottom="-25dp"
                android:background="@drawable/baseline_arrow_drop_up_24"/>

        <TextView
            android:id="@+id/bread_dock"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/bread_color"
            android:inputType="textMultiLine"
            android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="BREAD DOCK"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/banana_color"
                android:layout_marginBottom="-25dp"
                android:background="@drawable/baseline_arrow_drop_up_24"/>

            <TextView
                android:id="@+id/banana_dock"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/banana_color"
                android:inputType="textMultiLine"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="BANANA DOCK"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/clothes_color"
                android:layout_marginBottom="-25dp"
                android:background="@drawable/baseline_arrow_drop_up_24"/>

            <TextView
                android:id="@+id/clothes_dock"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/clothes_color"
                android:inputType="textMultiLine"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="CLOTHES DOCK"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>